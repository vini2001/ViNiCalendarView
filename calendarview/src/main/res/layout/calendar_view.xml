<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_mes"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="2018
  Dezembro"
        android:textColor="#fafafa"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lnl_dias_semana"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/txt_domingo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="D"
            android:textColor="#FAFAFA" />

        <TextView
            android:id="@+id/txt_segunda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="S"
            android:textColor="#FAFAFA" />

        <TextView
            android:id="@+id/txt_terca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="T"
            android:textColor="#FAFAFA" />

        <TextView
            android:id="@+id/txt_quarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Q"
            android:textColor="#FAFAFA" />

        <TextView
            android:id="@+id/txt_quinta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Q"
            android:textColor="#FAFAFA" />

        <TextView
            android:id="@+id/txt_sexta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="S"
            android:textColor="#FAFAFA" />

        <TextView
            android:id="@+id/txt_sabado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="S"
            android:textColor="#FAFAFA" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="?attr/colorPrimary" />
</LinearLayout>